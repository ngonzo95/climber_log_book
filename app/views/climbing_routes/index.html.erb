<p id="notice"><%= notice %></p>

<h1>Climbing Routes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rating</th>
      <th>Beta</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @climbing_routes.each do |climbing_route| %>
      <tr>
        <td><%= climbing_route.name %></td>
        <td><%= climbing_route.rating %></td>
        <td><%= climbing_route.beta %></td>
        <td><%= climbing_route.description %></td>
        <td><%= link_to 'Show', climbing_route %></td>
        <td><%= link_to 'Edit', edit_climbing_route_path(climbing_route) %></td>
        <td><%= link_to 'Destroy', climbing_route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

